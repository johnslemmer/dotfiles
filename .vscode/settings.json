{
    "files.associations": {
        "*MIB.txt": "mib",
    },

    "editor.minimap.enabled": false,
    "editor.folding": false,
    "editor.rulers": [
        80
    ],
    "editor.renderControlCharacters": true,
    "editor.renderWhitespace": "boundary",
    "editor.cursorBlinking": "solid",
    "editor.renderLineHighlight": "gutter",
    "editor.emptySelectionClipboard": false,
    "editor.find.autoFindInSelection": true,

    "workbench.colorTheme": "Solarized Dark",
    "workbench.startupEditor": "none",
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,

    "window.title": "${activeEditorLong}",
    "window.newWindowDimensions": "maximized",
    "window.restoreWindows": "none",

    "cSpell.userWords": [
        "Slemmer",
        "virtualized"
    ],

    "vim.hlsearch": true,
    "vim.visualstar": true,
    "vim.cmdLineInitialColon": true,
    "vim.substituteGlobalFlag": true,
    "vim.cursorStylePerMode": {
        "normal": "block",
        "insert": "line",
        "replace": "block-outline",
        "visual": "line-thin",
        "visualline": "underline-thin",
        "visualblock": "line-thin"
    },
    "vim.otherModesKeyBindingsNonRecursive": [
        // better word wrap cursor behavoir
        // TODO uncomment when this is working
        // {
        //     "before": ["j"],
        //     "after": ["g", "j"]
        // },
        // {
        //     "before": ["j"],
        //     "after": ["g", "j"]
        // },
        // ctrl-n will clear /-searches
        {
            "before":["<C-n>"],
            "after":[],
            "commands": [
                {
                    "command": ":nohl",
                    "args": []
                }
            ]
        },
    ],

    // TODO figure this out
    // "todohighlight.keywords": [
    //     "TODO",
    //     "FIXME",
    //     "NOTE",
    // ],
    // "todohighlight.defaultStyle": {
    //     "backgroundColor": "editor.background",
    // },

    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": false,
    },

    "[twiki]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": false,
        "editor.tabSize": 3,
    },

    "perforce.deleteOnFileDelete": true,
    "perforce.editOnFileSave": true,
    "perforce.scmFileChanges": false,

}
